<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="10dp"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/common_action_bar_splitter" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvDns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/deviceIcon"
            android:text="DNS Name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/deviceIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:contentDescription="Device"
            android:src="@mipmap/devices_important"
            android:tint="@color/colorPrimaryDark" />


        <TextView
            android:id="@+id/tvIpWig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tvDns"
            android:text="IP Address"
            android:textColor="@color/light_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvMac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDns"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/tvIpWig"
            android:text="MAC Address"


            android:textColor="@color/light_gray"
            android:textSize="12sp" />

    </RelativeLayout>

</LinearLayout>