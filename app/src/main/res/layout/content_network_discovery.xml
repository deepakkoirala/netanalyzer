<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.thapasujan5.netanalzyerpro.NetworkDiscoveryActivity"
    tools:showIn="@layout/activity_network_discovery">

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Swipe down for instant scanning." />

    <RelativeLayout
        android:id="@+id/rlWifiDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="@dimen/padding_wifi_details">

        <ImageView
            android:id="@+id/ivWifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_wifi_logo"
            android:tint="@color/app_theme_background" />

        <LinearLayout
            android:id="@+id/llSsidPercent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivWifi"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvSsid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/ivWifi"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="start"
                android:text="Check Wifi Connection."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/app_theme_background" />

            <TextView
                android:id="@+id/tvPercentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvNetworkName"
                android:layout_weight="1"
                android:gravity="end"
                android:text="0%"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/app_theme_background" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rlOperatorDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llSsidPercent"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/ivWifi"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvRouterIp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="Getting IP ADD."
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/app_theme_background" />

            <TextView
                android:id="@+id/tvMac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="left"
                android:text="Getting MAC ID."
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/app_theme_background" />


            <Switch
                android:id="@+id/tbWifiSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorPrimary"
                android:gravity="end" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llPb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlWifiDetails"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/ivCancel"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_toRightOf="@+id/progressBar"
            android:src="@mipmap/cancel"

            android:tint="@color/colorPrimary" />
    </LinearLayout>


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llPb">


        <ListView
            android:id="@+id/listView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeLayout"
            android:divider="@null"
            android:dividerHeight="0dp" />


    </android.support.v4.widget.SwipeRefreshLayout>


</RelativeLayout>
